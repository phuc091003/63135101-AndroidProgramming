<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp">

        <!-- Ảnh đại diện -->
        <ImageView
            android:id="@+id/avatar"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/avatar"
            android:scaleType="centerCrop"
            android:contentDescription="Avatar"
            android:background="@drawable/circle_background"
            android:layout_marginBottom="16dp"
            android:elevation="6dp"/>

        <!-- Họ và tên -->
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên: Nguyễn Hữu Phúc"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginBottom="6dp"/>

        <!-- Địa chỉ -->
        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📍 Địa chỉ: 973 đường 2/4 Nha Trang Khánh Hòa"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:layout_marginBottom="4dp"/>

        <!-- Trường học -->
        <TextView
            android:id="@+id/school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🎓 Trường: Đại học Nha Trang"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:layout_marginBottom="4dp"/>

        <!-- Chuyên ngành -->
        <TextView
            android:id="@+id/major"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="💻 Chuyên ngành: Công nghệ thông tin"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:layout_marginBottom="4dp"/>

        <!-- Năm học -->
        <TextView
            android:id="@+id/year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📅 Năm học: 2021 - 2025"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:layout_marginBottom="4dp"/>

        <!-- Số điện thoại -->
        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📞 Số địện thoại: 0565 937 745"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:layout_marginBottom="4dp"/>

        <!-- Gmail -->
        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📧 email: phuc.nh.63cntt@ntu.edu.vn"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:layout_marginBottom="16dp"/>

        <!-- Mục tiêu nghề nghiệp -->
        <TextView
            android:id="@+id/career_goal_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🎯 Mục tiêu nghề nghiệp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/career_goal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trở thành một Data Analyst chuyên nghiệp"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:layout_marginBottom="8dp"/>

        <!-- Kỹ năng chính -->
        <TextView
            android:id="@+id/skills_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="💡 Kỹ năng chính"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/skills"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="✔ SQL/PowerBI\n✔ Statistic\n✔ Python\n✔ Machine Learning"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:layout_marginBottom="16dp"/>

        <!-- Khu vực icon mạng xã hội -->
        <LinearLayout
            android:id="@+id/social_icons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/icon_facebook"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_facebook"
                android:contentDescription="Facebook"
                android:background="@drawable/social_icon_background"
                android:padding="10dp"
                android:layout_margin="8dp"/>

            <ImageView
                android:id="@+id/icon_instagram"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_instagram"
                android:contentDescription="Instagram"
                android:background="@drawable/social_icon_background"
                android:padding="10dp"
                android:layout_margin="8dp"/>

            <ImageView
                android:id="@+id/icon_twitter"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_twitter"
                android:contentDescription="Twitter"
                android:background="@drawable/social_icon_background"
                android:padding="10dp"
                android:layout_margin="8dp"/>

            <ImageView
                android:id="@+id/icon_linkedin"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_linkedin"
                android:contentDescription="LinkedIn"
                android:background="@drawable/social_icon_background"
                android:padding="10dp"
                android:layout_margin="8dp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
