<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:background="#2CD01A1A"
            android:scaleType="fitCenter"
            android:src="@drawable/logo" />
        <TextView
            android:layout_width="match_parent"
            android:background="#2CD01A1A"
            android:layout_height="80dp"
            android:gravity="center"
            android:textSize="16dp"
            android:text="Tính điểm trung bình môn học"
            />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Điểm QT (20%)">
    </TextView>
    <EditText
        android:id="@+id/qt"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="@drawable/edit_text_bg"
        android:hint="Điểm số"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Điểm GK (30%)">
    </TextView>
    <EditText
        android:id="@+id/gk"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="@drawable/edit_text_bg"
        android:hint="Điểm số"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Điểm Thi cuối kỳ (50%)">
    </TextView>
    <EditText
        android:id="@+id/ck"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="@drawable/edit_text_bg"
        android:hint="Điểm số"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        android:onClick="tinhDiem"
        android:text="Tính điểm TB" />

    <EditText
        android:id="@+id/edtKetQua"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="@drawable/edit_text_bg"
        android:clickable="false"
        android:focusable="false"
        android:hint="Kết quả sẽ hiển thị ở đây"
        android:inputType="numberDecimal"
        android:padding="10dp"
        android:textSize="18sp" />

</LinearLayout>
